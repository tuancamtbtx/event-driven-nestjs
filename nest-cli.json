{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/event-driven-nestjs/src",
  "monorepo": true,
  "root": "apps/event-driven-nestjs",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/event-driven-nestjs/tsconfig.app.json"
  },
  "projects": {
    "event-driven-nestjs": {
      "type": "application",
      "root": "apps/event-driven-nestjs",
      "entryFile": "main",
      "sourceRoot": "apps/event-driven-nestjs/src",
      "compilerOptions": {
        "tsConfigPath": "apps/event-driven-nestjs/tsconfig.app.json"
      }
    },
    "auth-service": {
      "type": "application",
      "root": "apps/auth-service",
      "entryFile": "main",
      "sourceRoot": "apps/auth-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-service/tsconfig.app.json"
      }
    }
  }
}